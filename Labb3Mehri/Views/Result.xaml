<UserControl x:Class="Labb3Mehri.Views.Result"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3Mehri.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Complete!"
                   FontSize="35"
                   Margin="0"/>
            <Label Content="{Binding PlayerViewModel.ResultText}"
                   FontSize="15"
                   Margin="0"/>
            <Button Height="40"
                    Width="110"
                    Content="Restart"
                    Command="{Binding PlayerViewModel.RestartQuizCommand}"
                    Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
